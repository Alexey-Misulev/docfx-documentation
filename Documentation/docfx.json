{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.csproj" ],
          "src": "../"
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "allowCompilationErrors": true
    }
  ],
  "build": {
    "content": [
      { "files": [ "toc.yml", "*.md" ] },
      { "files": [ "api/**.yml" ], "src": "api" }
    ],
    "resource": [
      { "files": [ "images/**" ] }
    ],
    "dest": "_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appTitle": "My Project Documentation",
      "_enableSearch": true,
      "_disableContribution": true
    }
  }
}