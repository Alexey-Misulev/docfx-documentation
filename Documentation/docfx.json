{
  "metadata": [
    {
      "src": [
        {
          "files": [ "MyPackage/**/*.csproj" ],
          "src": "../"
        }
      ],
      "dest": "api",
      "allowCompilationErrors": true,
      "disableGitFeatures": false
    }
  ],
  "build": {
    "content": [
      { "files": [ "toc.yml", "*.md" ] },
      { "files": [ "api/**.yml" ], "src": "api" }
    ],
    "dest": "_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appTitle": "My Unity Package Docs",
      "_enableSearch": true
    }
  }
}